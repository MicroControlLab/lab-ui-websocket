{
  "name": "lab-gui-websocket",
  "version": "2.0.0",
  "description": "",
  "keywords": [
    "typescript",
    "websocket",
    "reconnecting",
    "lab-ui",
    "MicroControlLab"
  ],
  "main": "dist/lab-gui-websocket.umd.js",
  "module": "dist/lab-gui-websocket.es5.js",
  "typings": "dist/types/lab-gui-websocket.d.ts",
  "files": [
    "dist"
  ],
  "author": "Sebastian Weigand <s.weigand.phy@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/MicroControlLab/lab-gui-websocket.git"
  },
  "bugs": {
    "url": "https://github.com/MicroControlLab/lab-gui-websocket.git/issues"
  },
  "homepage": "https://github.com/MicroControlLab/lab-gui-websocket.git",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.{ts,tsx,js}' 'tests/**/*.{ts,tsx,js}'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts && typedoc --out docs --theme minimal src",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test:travis",
    "test:travis": "npm run test -- --no-cache --runInBand",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 95,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/jest": "^26.0.0",
    "@types/node": "^15.0.1",
    "colors": "^1.3.2",
    "commitizen": "^4.2.3",
    "cross-env": "^7.0.0",
    "cz-conventional-changelog": "^3.0.0",
    "husky": "^6.0.0",
    "jest": "^25.1.0",
    "jest-config": "^27.0.3",
    "lint-staged": "^11.0.0",
    "lodash.camelcase": "^4.3.0",
    "mock-socket": "^9.0.0",
    "prettier": "^2.0.2",
    "prompt": "^1.0.0",
    "replace-in-file": "^6.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.0.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-sourcemaps": "^0.6.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "semantic-release": "^17.3.9",
    "ts-jest": "^25.1.0",
    "ts-node": "^10.0.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^9.0.0",
    "typedoc": "^0.21.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  }
}
